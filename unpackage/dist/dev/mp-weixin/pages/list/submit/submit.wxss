
.content-box {
	margin-left: 25rpx;
	margin-right: 25rpx;
	background-color: #eee7d7;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	border-radius: 20rpx;
}
.content {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	margin: 25rpx 25rpx 25rpx 25rpx;
	background-color: #f7f6f5;
}
.content-title {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	width: 650rpx;
	height: 180rpx;
	/* justify-content: space-around; */
}
.content-title-left {
	width: 400rpx;
	margin: 35rpx 35rpx 35rpx 35rpx;
}
.content-title-left view:nth-child(1) {
	font-size: 40rpx;
	font-weight: bold;
	margin-bottom: 25rpx;
}
.content-title-left view:nth-child(2) {
	font-size: 20rpx;
	color: #be9a73;
}
.content-title-right {
	width: 110rpx;
	height: 110rpx;
	margin: 35rpx 35rpx 35rpx 35rpx;
}
.content-title-right image {
	width: 100%;
	height: 100%;
}
.content-middle {
	width: 580rpx;
	margin-left: 35rpx;
	height: 300rpx;
	margin-bottom: 75rpx;
}
.content-bottom {
	width: 580rpx;
	height: 100rpx;
	margin: 30rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	border-top: 5rpx solid #808080;
}
.icon-qingkong {
	width: 50rpx;
	height: 50rpx;
	margin: 10rpx 10rpx 10rpx 10rpx;
}
.icon-qingkong image {
	width: 100%;
	height: 100%;
}
.icon-chexiao {
	width: 50rpx;
	height: 50rpx;
	margin: 10rpx 10rpx 10rpx 10rpx;
}
.icon-chexiao image {
	width: 100%;
	height: 100%;
}
.icon-huifu {
	width: 50rpx;
	height: 50rpx;
	margin: 10rpx 10rpx 10rpx 10rpx;
}
.icon-huifu image {
	width: 100%;
	height: 100%;
}
.content-bottom button {
	margin: 10rpx 10rpx 10rpx 230rpx;
	background-color: transparent;
}
.content-radio {
	margin: 0 10rpx 20rpx 30rpx;
	font-size: 25rpx;
	color: #cba6b6;
}
.content-radio radio {
	
	-webkit-transform: scale(0.7);
	
	        transform: scale(0.7);
}

