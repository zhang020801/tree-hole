.scroll-view {
		height: 1000rpx;
}
.content {
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		-webkit-box-orient: vertical;
		-webkit-box-direction: normal;
		-webkit-flex-direction: column;
		        flex-direction: column;
}
.content-topic {
		color: #FFFCE2;
		width: 610rpx;
		margin: 30rpx 70rpx 0 70rpx;
		font-size: 30rpx;
		line-height: 50rpx;
}
.content-comment {
		margin: 0 70rpx 0 70rpx;
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		-webkit-box-orient: horizontal;
		-webkit-box-direction: normal;
		-webkit-flex-direction: row;
		        flex-direction: row;
}
.comment-head {}
.user-comment {
		color: #FFFFFF;
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		-webkit-box-orient: vertical;
		-webkit-box-direction: normal;
		-webkit-flex-direction: column;
		        flex-direction: column;
		margin-top: 20rpx;
		border-bottom: 3rpx solid #888888;
}
.user-comment-head {
		width: 610rpx;
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		-webkit-box-orient: horizontal;
		-webkit-box-direction: normal;
		-webkit-flex-direction: row;
		        flex-direction: row;
		-webkit-box-pack: justify;
		-webkit-justify-content: space-between;
		        justify-content: space-between;
}
.head-image {
		width: 100rpx;
		height: 100rpx;
}
.head-image image {
		width: 100%;
		height: 100%;
		border-radius: 50rpx;
}
.user-comment-bottom {
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		-webkit-box-orient: horizontal;
		-webkit-box-direction: normal;
		-webkit-flex-direction: row;
		        flex-direction: row;
		width: 610rpx;
		margin-bottom: 10rpx;
}
.comment-content {
		width: 400rpx;
		margin-left: 140rpx;
}
.item .handle switch {
		-webkit-transform: scale(0.6);
		        transform: scale(0.6);
}
.submit-box {
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		position: fixed;
		-webkit-box-orient: horizontal;
		-webkit-box-direction: normal;
		-webkit-flex-direction: row;
		        flex-direction: row;
		/* justify-content: space-between; */
		-webkit-box-align: center;
		-webkit-align-items: center;
		        align-items: center;
		bottom: 0;
		padding: 20rpx 15rpx;
		width: 750rpx;
		border-top: solid 1px #efecf2;
/* 		background-color: #ffffff; */
		height: 56px;
}
.submit-box-image {
		width: 60rpx;
		height: 60rpx;
		margin-left: 10rpx;
		margin-right: 50rpx;
}
.submit-box-image cloud-image,
	.submit-box-image image {
		width: 100%;
		height: 100%;
		border-radius: 30rpx;
}
.submit-box-input {
	width: 400rpx;
}
.submit-box-input input {
	color: #000000;
	background-color: #FFFFFF;
	border-radius: 30rpx;
}
.submit-box-button {
	margin-left: 50rpx;
	margin-right: 10rpx;
}
.submit-box-button button {
	color: #FFFFFF;
	background-color: transparent;
}
	
	

